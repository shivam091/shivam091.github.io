---
permalink: /atom.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/" xml:lang="{{ site.lang | default: 'en' }}">
  <generator uri="https://jekyllrb.com" version="4.3.3">Jekyll</generator>
  <title>{{ site.title | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  <id>{{ site.url }}/</id>
  <icon>{{ '/img/favicon.png' | prepend: site.url }}</icon>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <rights>Â© {{ "now" | date: "%Y" }} {{ site.title }}</rights>

  <link rel="alternate" type="text/html" href="{{ site.url }}" />
  <link rel="self" type="application/atom+xml" href="{{ '/atom.xml' | prepend: site.url }}" />

  {% if site.author %}
  <author>
    <name>{{ site.author.name }}</name>
    <email>{{ site.author.email }}</email>
    <uri>{{ site.author.url }}</uri>
  </author>
  {% endif %}

  {% for post in site.posts %}
  <entry xml:lang="{{ post.lang | default: site.lang }}">
    <title>{{ post.title | xml_escape }}</title>
    <link rel="alternate" type="text/html" href="{{ site.url }}{{ post.url }}" />
    <id>{{ post.url | prepend: site.url }}</id>

    <published>{{ post.published_at | default: post.date | date_to_xmlschema }}</published>
    <updated>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</updated>

    {% if post.cover_image %}
    <media:thumbnail
      url="{{ post.cover_image.path | prepend: site.url }}"
      {% if post.cover_image.width %}width="{{ post.cover_image.width }}"{% endif %}
      {% if post.cover_image.height %}height="{{ post.cover_image.height }}"{% endif %} />
    {% endif %}

    {% assign author_ids = post.authors | default: site.post.author.default %}
    {% if author_ids %}
      {% for author_id in author_ids %}
        {% assign author = site.data.authors[author_id] %}
        <author>
          <name>{{ author.name | escape_once }}</name>
          <uri>{{ author.website }}</uri>
        </author>
      {% endfor %}
    {% endif %}

    <summary type="html">
      {{ post.meta.description | default: post.excerpt | strip_html | truncate: 160 | xml_escape }}
    </summary>
    <content type="html"><![CDATA[{{ post.content }}]]></content>

    {% for tag in post.tags %}
      <category term="{{ tag | xml_escape }}" scheme="urn:taxonomy:tag" />
    {% endfor %}

    {% for category in post.categories %}
      <category term="{{ category | xml_escape }}" scheme="urn:taxonomy:category" />
    {% endfor %}
  </entry>
  {% endfor %}
</feed>
